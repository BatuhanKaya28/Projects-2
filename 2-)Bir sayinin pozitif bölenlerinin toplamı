#include <stdio.h>
#include <math.h>

    int main(){
    	int a;
    	printf("Sayiyi Giriniz==> ");
    	scanf("%d",&a);
		int i,bolum;
    	int toplam = 0;
    	
    	for(i = 1; i<=a;i++){
    		bolum=a % i;
    		if(bolum==0){
    			printf("%d sayisinin pozitif tam bolenleri==>%d\n",a,i);
    			
    			toplam = toplam + i;
    			
    			
    		}
    	}
    	
    	printf("\n %d sayinin pozitif bolenleri toplami==>%d",a,toplam);
    	
    	return 0;
    }
